<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/custom_color"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="包名："
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_package_name"
                android:singleLine="true"
                android:text="显示当前应用的包名"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="活动："
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_activity_name"
                android:singleLine="true"
                android:text="显示当前页面的活动名"
                android:textColor="@color/white" />
        </TableRow>

        <TableRow
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:text="控件："
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_widget_info"
                android:singleLine="true"
                android:text="显示选中的控件信息"
                android:textColor="@color/white" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_show_outline"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_dialog_bg_selector"
            android:text="显示布局"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_add_widget"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_dialog_bg_selector"
            android:enabled="false"
            android:text="添加控件"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/button_quit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/drawable_dialog_bg_selector"
            android:text="退出"
            android:textColor="@color/white" />

    </LinearLayout>
</LinearLayout>